<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed  %>
<p>This task is completed! 😎</p>
<% else %>
<p>This task is not completed: 😤 </p>
<% end %>

<%= link_to 'Back to tasks', tasks_path %>
<br>
<%= link_to 'New task', tasks_new_path %>


<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
